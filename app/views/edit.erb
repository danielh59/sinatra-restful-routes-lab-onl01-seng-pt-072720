h1>Edit Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
<br><br>
    <p>Name:<p><input type="text" name="name" id= "name" value="<%= @recipe.name %>">
<br><br>
    <p>Ingredients:<p><input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>">
<br><br>
    <label for="cook_time">Cook Time:</label>
    <input type="text" name="cook_time" id="cook_time" value="<%= @recipe.cook_time %>">
<br><br>
  <input type="submit" value="Delete">
</form>
